CREATE DATABASE edu_db;

USE edu_db;

CREATE TABLE users (
    id INT AUTO_INCREMENT PRIMARY KEY,
    username VARCHAR(50) UNIQUE,
    password VARCHAR(255),
    email VARCHAR(100)
);

CREATE TABLE details (
    id INT AUTO_INCREMENT PRIMARY KEY,
    user_id INT,
    info TEXT,
    FOREIGN KEY (user_id) REFERENCES users(id)
);
